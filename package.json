{
  "name": "terminal7",
  "version": "0.19.3",
  "description": "A touchable terminal emulator & multiplexer tablet app",
  "main": "src/index.js",
  "private": true,
  "bin": {
    "terminal7": "download_browser.js"
  },
  "build": {
    "appId": "dev.terminal7",
    "files": [
      "index.html",
      "css/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "dependencies": {
    "@capacitor/android": "^3.2.5",
    "@capacitor/app": "^1.0.5",
    "@capacitor/cli": "<4",
    "@capacitor/clipboard": "^1.0.5",
    "@capacitor/core": "<4",
    "@capacitor/device": "^1.0.5",
    "@capacitor/ios": "<4",
    "@capacitor/network": "^1.0.5",
    "@capacitor/storage": "^1.2.2",
    "@iarna/toml": "git+https://github.com/tuzig/iarna-toml.git",
    "@robingenz/capacitor-background-task": "^1.0.0",
    "codemirror": "git+https://github.com/tuzig/CodeMirror.git",
    "glob": "<8",
    "hammerjs": "<3",
    "idb": "<7",
    "uuid": "^8.3.2",
    "xterm": "git+https://github.com/tuzig/xterm.js.git#semver:<5.0",
    "xterm-addon-fit": "^0.3.0",
    "xterm-addon-search": "^0.7.0",
    "xterm-webfont": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "css-loader": "^5.2.4",
    "file-loader": "^6.1.0",
    "jsdom": "^19.0.0",
    "serve": "^13.0.2",
    "source-map-loader": "^1.1.0",
    "style-loader": "^1.1.4",
    "ts-loader": "<9",
    "typescript": "<5",
    "url-loader": "^4.1.0",
    "vite": "^2.8.5",
    "vite-plugin-pwa": "^0.11.13",
    "vitest": "^0.5.9",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "stage": "vite build --sourcemap && vite preview",
    "run": "cap run ios",
    "test": "vitest",
    "build": "vite build --sourcemap",
    "clean": "rm -rf dist ios/App/App/public/*",
    "postinstall": "cd ./node_modules/xterm && yarn install && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuzig/terminal7.git"
  },
  "keywords": [
    "terminal",
    "javascript",
    "tmux",
    "webrtc"
  ],
  "author": "Benny Daon",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/tuzig/terminal7/issues"
  },
  "homepage": "https://github.com/tuzig/terminal7#readme",
  "mocha": {
    "watch-files": [
      "src/*.js",
      "test/*.js"
    ]
  }
}
